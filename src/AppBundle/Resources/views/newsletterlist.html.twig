{% block title %} Newsletter {% for i in 1|somme %} | {{ i.nom }} {% endfor %} {#{{ parent() }}#}{% endblock %}

{% block content %}

<h1> Liste des adresses email </h1>

{#<table class="table" id="table">#}




    <div class="col-lg-12">
        <div class="card">

            <div class="card-body">
                <form class="form-horizontal">
                    <div class="table-responsive">
                        <table class="datatable" id="datatable">


                            <thead >
                            <tr>
                                <th>Email</th>
                                <th></th>

                            </tr>
                            </thead>

                            {% for n in newsletter %}
