{% extends 'SyliusAdminBundle::layout.html.twig' %}

{% block title %} SAV {% for i in 1|somme %} | {{ i.nom }} {% endfor %} {#{{ parent() }}#}{% endblock %}

{% block content %}

<h1> Service aprés vente </h1>

    <style>
        table, td, th {
            border: 1px solid #ddd;
            text-align: left;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            padding: 15px;
        }

        tr:hover {background-color:#f5f5f5;}
    </style>

    <div class="col-lg-12">
        <div class="card">

            <div class="card-body">
                <form class="form-horizontal">
                    <div class="table-responsive">
                        <table class="table" id="table">


                            <thead >
                            <tr>
                                <th>Titre</th>
                                <th>Contenu</th>
                                <th></th>
                                <th></th>

                            </tr>
                            </thead>

                            {% for s in sav %}
                                <tr>
                                    <td> {{ s.titre}} </td>
                                    <td> {{ s.contenu}} </td>
                                    <td> <a href="{{ path('sav_edit', {'id' : s.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true">Modifier</span></a> </td>
                                    <td> <a href="{{ path('sav_delete', {'id': s.id }) }}"><span class="glyphicon glyphicon-trash" aria-hidden="true">Supprimer</span></a></td>
                                </tr>
                            {% endfor %}

                        </table>

                    </div>
                </form>

            </div>
            <a class="btn btn-primary" href="{{ path('sav_add') }}"><span class="btn info" aria-hidden="true"> Ajouter </span></a>
        </div>

    </div>



</table>

