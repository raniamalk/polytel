{% extends 'SyliusAdminBundle::layout.html.twig' %}

{% block title %} Page {% for i in 1|somme %} | {{ i.nom }} {% endfor %} {#{{ parent() }}#}{% endblock %}

{% block content %}


<h1> Ajout d'une page </h1>



{{ form_start(form) }}

    <br>
    <div class="form-group row">
        <label class="col-sm-2 form-control-label"> Catalogue </label>
        <div class="col-sm-10">
            {{ form_widget(form.catalogue, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 form-control-label"> Position de la page </label>
        <div class="col-sm-10">
            {{ form_widget(form.position, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 form-control-label"> Image de la page </label>
        <div class="col-sm-10">
            {{ form_widget(form.file, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-4 offset-sm-3">
            <button type="submit" class="btn btn-success">Enregistrer</button>
        </div>
    </div>

{{ form_end(form) }}




{% endblock %}