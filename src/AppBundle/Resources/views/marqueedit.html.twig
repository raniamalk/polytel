{% extends 'SyliusAdminBundle::layout.html.twig' %}

{% block title %} Marque {% for i in 1|somme %} | {{ i.nom }} {% endfor %} {#{{ parent() }}#}{% endblock %}

{% block content %}

        <h1> Modifier une marque </h1>


        {{ form_start(form) }}

            <br>
            <div class="form-group row">
                <label class="col-sm-2 form-control-label"> Titre de la marque </label>
                <div class="col-sm-9">
                    {{ form_widget(form.marque, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 form-control-label"> Lien </label>
                <div class="col-sm-9">
                    {{ form_widget(form.lien, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 form-control-label"> Image de la marque </label>
                <div class="col-sm-9">
                    {{ form_widget(form.file, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-4 offset-sm-3">
                    <button type="submit" class="btn btn-success">Enregistrer</button>
                </div>
            </div>


        {{ form_end(form) }}

