{% extends 'SyliusAdminBundle::layout.html.twig' %}

{% block title %} Telechargement {% for i in 1|somme %} | {{ i.nom }} {% endfor %} {#{{ parent() }}#}{% endblock %}

{% block content %}

    <style>
        table, td, th {
            border: 1px solid #ddd;
            text-align: left;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            padding: 15px;
        }

        tr:hover {background-color:#f5f5f5;}
    </style>

<h1> Liste des documents </h1>


    <div class="col-lg-12">
        <div class="card">

            <div class="card-body">
                <form class="form-horizontal">
                    <div class="table-responsive">
                        <table class="datatable" id="datatable">

                            <thead >
                            <tr>
                                {#<th>Titre</th>#}
                                <th>Document</th>
                                <th></th>
                                <th></th>
                            </tr>
                            </thead>

                            {% for t in telechargement %}
                                <tr>
                                    {#<td> {{ t.titre}} </td>#}
                                    <td><a href="{{ asset('uploads/' ~ t.path) }}" target="_blank">{{ t.titre }}</a></td>
                                    <td> <a href="{{ path('telechargement_edit', {'id' : t.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true">Modifier</span></a> </td>
                                    <td> <a href="{{ path('telechargement_delete', {'id': t.id }) }}"><span class="glyphicon glyphicon-trash" aria-hidden="true">Supprimer</span></a></td>
                                </tr>
                            {% endfor %}

                        </table>

                    </div>
                </form>

            </div>
            <a class="btn btn-primary" href="{{ path('telechargement_add') }}"><span class="btn info" aria-hidden="true"> Ajouter </span></a>

        </div>

    </div>



{#
</body>
</html>#}

{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function() {
            $('#datatable').DataTable();
        } );
    </script>
{% endblock %}
