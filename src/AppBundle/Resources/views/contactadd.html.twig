{% extends '@SyliusShop/layout.html.twig' %}

{% block stylesheet %}

    <link rel="stylesheet" type="text/css" href="{{ asset('assets/front/styles/bootstrap4/bootstrap.min.css') }}">
    <link href="{{ asset('assets/front/plugins/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/front/styles/contact.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/front/styles/contact_responsive.css') }}">

{% endblock %}

{% block banniere %}{%  endblock %}

{% block content %}

<!-- Home -->

<div class="home">
    <div class="home_container">
        <div class="home_background" style="background-image:url({{ asset('assets/front/images/contactus.jpg') }})"></div>
        <div class="home_content_container">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="home_content">
                            <div class="breadcrumbs">
                                <ul>
                                    <li><a href="#" > Acceuil </a></li>
                                    <li>Contact</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Contact -->

<div class="contact">
    <div class="container">
        <div class="row">



                <!-- Get in touch -->
                <div class="col-lg-8 contact_col">
                    <div class="get_in_touch">
                        <div class="section_title"> Entrer en contact </div>
                        {#<div class="section_subtitle">Say hello</div>#}
                        <div class="contact_form_container">
                            <form action="{{ path('contact_add') }}" id="contact_form" class="contact_form " method="post">
                                {{ form_start(form) }}
                                    <div class="row">
                                        <div class="col-xl-6">
                                            <!-- Name -->
                                            <label for="contact_name">Nom*</label>
                                            {{ form_widget(form.nom, {'attr': {'class': 'contact_input', 'id':'contact_name'}}) }}
                                        </div>
                                        <div class="col-xl-6 last_name_col">
                                            <!-- Last Name -->
                                            <label for="contact_last_name">Email*</label>
                                            {{ form_widget(form.email, {'attr': {'class': 'contact_input', 'id':'contact_last_name'}}) }}
                                        </div>
                                    </div>
                                    <div>
                                        <!-- Subject -->
                                        <label for="contact_company">Téléphone</label>
                                        {{ form_widget(form.telephone, {'attr': {'class': 'contact_input', 'id':'contact_company'}}) }}
                                    </div>
                                    <div>
                                        <label for="contact_textarea">Message*</label>
                                        {{ form_widget(form.message, {'attr': {'class': 'contact_input contact_textarea', 'id':'contact_textarea'}}) }}
                                    </div>
                                    <button type="submit" class="button contact_button">Envoyer</button>

                                {{ form_end(form) }}
                            </form>
                        </div>
                    </div>
                </div>



            {% for i in 1|somme %}
            <!-- Contact Info -->
            <div class="col-lg-3 offset-xl-1 contact_col">
                <div class="contact_info">
                    <div class="contact_info_section">
                        <div class="contact_info_title">{{ i.nom  }}</div>
                        <ul>
                            <li>Adresse: <span>{{ i.adresse }}</span></li>
                        </ul>
                        <ul>
                            <li>Email: <span>{{ i.email }}</span></li>
                        </ul>
                        <ul>
                            <li>Téléphone: <span>{{ i.telephone }}</span></li>
                        </ul>
                        <ul>
                            <li>Fax: <span>{{ i.fax }}</span></li>
                        </ul>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        <div class="row map_row">
            <div class="col">

                <!-- Google Map -->
                <div class="map">
                    <div id="google_map" class="google_map">
                        <div class="map_container">
                            <div id="map">
                                <div class="map-responsive">
                                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d5589.7341136532295!2d-7.622921399085001!3d33.58776615197702!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xda7d299a514eb0d%3A0xc5fcb056ffd637a3!2sPolytel+Sarl!5e0!3m2!1sen!2sma!4v1548425177916" {#width="600" height="450"#} frameborder="0" style="border:0" allowfullscreen></iframe>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


{% endblock %}

