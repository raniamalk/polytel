{% extends 'SyliusAdminBundle::layout.html.twig' %}

{% block title %} CGV {% for i in 1|somme %} | {{ i.nom }} {% endfor %} {#{{ parent() }}#}{% endblock %}

{% block content %}
    <style>
        table, td, th {
            border: 1px solid #ddd;
            text-align: left;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            padding: 15px;
        }

        tr:hover {background-color:#f5f5f5;}
    </style>

<h1> Conditions generales de vente </h1>

    <div class="col-lg-12">
        <div class="card">

            <div class="card-body">
                <form class="form-horizontal">
                    <div class="table-responsive">
                        <table class="table" id="table">


                            <thead >
                            <tr>
                                <th>Titre</th>
                                <th>Contenu</th>
                                <th></th>
                                <th></th>

                            </tr>
                            </thead>

                            {% for c in cgv %}
                                <tr>
                                    <td> {{ c.titre}} </td>
                                    <td> {{ c.contenu | slice(0,1000) | raw }} </td>
                                    <td> <a href="{{ path('cgv_edit', {'id' : c.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true">Modifier</span></a> </td>
                                    <td> <a href="{{ path('cgv_delete', {'id': c.id }) }}"><span class="glyphicon glyphicon-trash" aria-hidden="true">Supprimer</span></a></td>
                                </tr>
                            {% endfor %}



                        </table>

                    </div>
                </form>

            </div>
            <a class="btn btn-primary" href="{{ path('cgv_add') }}"><span class="btn info" aria-hidden="true"> Ajouter </span></a>

        </div>
    </div>

{% endblock %}