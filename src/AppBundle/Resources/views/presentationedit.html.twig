{% extends 'SyliusAdminBundle::layout.html.twig' %}

{% block title %} Presentation {% for i in 1|somme %} | {{ i.nom }} {% endfor %} {#{{ parent() }}#}{% endblock %}

{% block content %}

    <h1> Modifier la presentation </h1>

    {{ form_start(form) }}

    <br>
    <div class="form-group row">
        <label class="col-sm-2 form-control-label">Image de presentation</label>
        <div class="col-sm-9">
            {{ form_widget(form.file, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 form-control-label"> Titre </label>
        <div class="col-sm-9">
            {{ form_widget(form.titre, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 form-control-label"> Contenu </label>
        <div class="col-sm-9">
            {{ form_widget(form.contenu, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 form-control-label"> Metadescription </label>
        <div class="col-sm-9">
            {{ form_widget(form.metadescription, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 form-control-label"> Metakeywords </label>
        <div class="col-sm-9">
            {{ form_widget(form.metakeywords, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-4 offset-sm-3">
            <button type="submit" class="btn btn-success">Valider</button>
        </div>
    </div>

    {{ form_end(form) }}

{#
</body>
</html>#}

{% endblock %}

{% block javascripts %}
    <script>
        CKEDITOR.replace( 'presentation_contenu' );
    </script>

{% endblock %}
