{% extends 'SyliusAdminBundle::layout.html.twig' %}

{% block title %} Marques {% for i in 1|somme %} | {{ i.nom }} {% endfor %} {#{{ parent() }}#}{% endblock %}

{% block content %}

    <style>
        table, td, th {
            border: 1px solid #ddd;
            text-align: left;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            padding: 15px;
        }

        tr:hover {background-color:#f5f5f5;}
    </style>

<h1> Liste des marques </h1>



    <br>
    <div class="col-lg-12">
        <div class="card">

            <div class="card-body">
                <form class="form-horizontal">
                    <div class="table-responsive">
                        <table class="datatable" id="datatable">


                            <thead >
                            <tr>
                                <th>Titre marque</th>
                                <th>Contenu</th>
                                <th></th>
                                <th></th>

                            </tr>
                            </thead>

                            {% for m in marque %}
                                <tr>
                                    <td> <img alt="pas d'image" src="{{ asset('uploads/') ~ m.path }}"  width="120" height="60"> </td>
                                    <td> {{ m.marque}} </td>
                                    <td> <a href="{{ path('marque_edit', {'id' : m.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true">Modifier</span></a> </td>
                                    <td> <a href="{{ path('marque_delete', {'id': m.id }) }}"><span class="glyphicon glyphicon-trash" aria-hidden="true">Supprimer</span></a></td>
                                </tr>
                            {% endfor %}

                        </table>

                    </div>
                </form>

            </div>

        </div>

    </div>
    <br>
    <a class="ui icon button  primary" href="{{ path('marque_add') }}"><span class="btn info" aria-hidden="true"> Ajouter </span></a>


{#
</body>
</html>#}

{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function() {
            $('#datatable').DataTable();
        } );
    </script>
{% endblock %}