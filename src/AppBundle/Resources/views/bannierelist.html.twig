{% extends 'SyliusAdminBundle::layout.html.twig' %}

{% block title %} Bannière {% for i in 1|somme %} | {{ i.nom }} {% endfor %} {% endblock %}

{% block content %}

<h1> Liste des Images du bannière </h1>


    <div class="col-lg-12">
        <div class="card">

            <div class="card-body">
                <form class="form-horizontal">
                    <div class="table-responsive">
                        <table class="table" id="table">


                            <thead >
                            <tr>
                                <th>Image</th>
                                <th>Titre</th>
                                <th></th>
                                <th></th>
                            </tr>
                            </thead>

                            {% for b in banniere %}
                                <tr>
                                    <td><img alt="{{ b.titre}}" src="{{ asset('uploads/' ~ b.path) }}"  width="400" height="300"></td>
                                    <td> {{ b.titre}} </td>
                                    <td> <a href="{{ path('banniere_edit', {'id' : b.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true">Modifier</span></a> </td>
                                    <td> <a href="{{ path('banniere_delete', {'id': b.id }) }}"><span class="glyphicon glyphicon-trash" aria-hidden="true">Supprimer</span></a></td>
                                </tr>
                            {% endfor %}

                        </table>

                    </div>
                </form>
                <a class="btn btn-primary" href="{{ path('banniere_add') }}"><span class="btn info" aria-hidden="true"> Ajouter </span></a>
            </div>

        </div>

    </div>


{% endblock %}