{% extends 'SyliusAdminBundle::layout.html.twig' %}

{% block title %} Slider {% for i in 1|somme %} | {{ i.nom }} {% endfor %} {#{{ parent() }}#}{% endblock %}

{% block content %}

<h1> Liste des Images du slider </h1>


    <div class="col-lg-12">
        <div class="card">

            <div class="card-body">
                <form class="form-horizontal">
                    <div class="table-responsive">
                        <table class="table" id="table">


                            <thead >
                            <tr>
                                <th>Image</th>
                                <th>Titre</th>
                                <th>Contenu</th>
                                <th></th>
                                <th></th>
                            </tr>
                            </thead>

                            {% for s in slider %}
                                <tr>
                                    <td><img alt="{{ s.titre}}" src="{{ asset('uploads/' ~ s.path) }}"  width="700" height="200"></td>
                                    <td> {{ s.titre}} </td>
                                    <td> <a href="{{ path('slider_edit', {'id' : s.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true">Modifier</span></a> </td>
                                    <td> <a href="{{ path('slider_delete', {'id': s.id }) }}"><span class="glyphicon glyphicon-trash" aria-hidden="true">Supprimer</span></a></td>
                                </tr>
                            {% endfor %}

                        </table>

                    </div>
                </form>
                <a class="btn btn-primary" href="{{ path('slider_add') }}"><span class="btn info" aria-hidden="true"> Ajouter </span></a>
            </div>

        </div>

    </div>


{% endblock %}
