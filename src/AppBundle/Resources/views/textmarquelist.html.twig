{% extends 'SyliusAdminBundle::layout.html.twig' %}

{% block title %} Text de la page marque {% for i in 1|somme %} | {{ i.nom }} {% endfor %} {#{{ parent() }}#}{% endblock %}

{% block content %}

    <style>
        table, td, th {
            border: 1px solid #ddd;
            text-align: left;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            padding: 15px;
        }

        tr:hover {background-color:#f5f5f5;}
    </style>

<h1> Contenu de la page des marques </h1>


    {% for t in textmarque %}

        <div class="col-lg-12">
            <div class="card">

                <div class="card-body">
                    <form class="form-horizontal">
                        <div class="table-responsive">
                            <table class="datatable" id="datatable">


                                <tr>
                                    <td> Titre </td>
                                    <td> {{ t.titre}} </td>
                                </tr>
                                <tr>
                                    <td> Contenu </td>
                                    <td> {{ t.contenu}} </td>
                                </tr>



                            </table>

                        </div>
                    </form>
                    <a class="btn  btn-primary" href="{{ path('textmarque_edit', {'id' : t.id}) }}"><span class="btn info" aria-hidden="true"> Modifier </span></a>
                </div>

            </div>



        </div>
    {% endfor %}


{% endblock %}

