{% extends 'SyliusAdminBundle::layout.html.twig' %}

{% block title %} Slider {% for i in 1|somme %} | {{ i.nom }} {% endfor %} {#{{ parent() }}#}{% endblock %}

{% block content %}

<h1> Modifier d'une image pour le slider </h1>

{{ form_start(form) }}

    <br>
    <div class="form-group row">
        <label class="col-sm-2 form-control-label"> Titre du slider </label>
        <div class="col-sm-9">
            {{ form_widget(form.titre, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 form-control-label">Image du slider</label>
        <div class="col-sm-9">
            {{ form_widget(form.file, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-4 offset-sm-3">
            <button type="submit" class="btn btn-success">Valider</button>
        </div>
    </div>

{{ form_end(form) }}

