{% extends 'SyliusAdminBundle::layout.html.twig' %}

{% block title %} Catalogue {% for i in 1|somme %} | {{ i.nom }} {% endfor %} {#{{ parent() }}#}{% endblock %}

{% block content %}

<h1> Liste des Catalogues </h1>



    <div class="col-lg-12">
        <div class="card">

            <div class="card-body">
                <form class="form-horizontal">
                    <div class="table-responsive">


                        <table class="datatable" id="datatable">

                            <thead >
                            <tr>
                                <th>Titre</th>
                                <th>Image</th>
                                <th></th>
                                <th></th>
                            </tr>
                            </thead>

                            {% for c in catalogue %}
                                <tr>
                                    <td> {{ c.titre}} </td>
                                    <td> <img alt="{{ c.titre }}" src="{{ asset('uploads/') ~ c.path }}"  width="190" height="250"> </td>
                                    <td> <a href="{{ path('catalogue_edit', {'id' : c.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true">Modifier</span></a> </td>
                                    <td> <a href="{{ path('catalogue_delete', {'id': c.id }) }}"><span class="glyphicon glyphicon-trash" aria-hidden="true">Supprimer</span></a></td>
                                </tr>
                            {% endfor %}

                        </table>


                    </div>
                </form>

            </div>  <br>
            <a class="btn btn-primary" href="{{ path('catalogue_add') }}"><span class="btn info" aria-hidden="true"> Ajouter </span></a>
        </div>

    </div>


{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function() {
            $('#datatable').DataTable();
        } );
    </script>
{% endblock %}

