{% extends 'SyliusAdminBundle::layout.html.twig' %}

{% block title %} infocontact {% for i in 1|somme %} | {{ i.nom }} {% endfor %} {#{{ parent() }}#}{% endblock %}

{% block content %}

<h1> Modifier les informations </h1>


{{ form_start(form) }}

    <br>
    <div class="form-group row">
        <label class="col-sm-2 form-control-label">logo</label>
        <div class="col-sm-9">
            {{ form_widget(form.file, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 form-control-label"> Raison sociale </label>
        <div class="col-sm-9">
            {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 form-control-label"> Adresse </label>
        <div class="col-sm-9">
            {{ form_widget(form.adresse, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 form-control-label"> Email </label>
        <div class="col-sm-9">
            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 form-control-label"> Téléphone </label>
        <div class="col-sm-9">
            {{ form_widget(form.telephone, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 form-control-label"> Fax </label>
        <div class="col-sm-9">
            {{ form_widget(form.fax, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 form-control-label"> Facebook </label>
        <div class="col-sm-9">
            {{ form_widget(form.facebook, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 form-control-label"> Linkedin </label>
        <div class="col-sm-9">
            {{ form_widget(form.linkedin, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 form-control-label"> Twitter </label>
        <div class="col-sm-9">
            {{ form_widget(form.twitter, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 form-control-label"> Printerest </label>
        <div class="col-sm-9">
            {{ form_widget(form.instagram, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 form-control-label"> Youtube </label>
        <div class="col-sm-9">
            {{ form_widget(form.youtube, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 form-control-label"> Metadescription </label>
        <div class="col-sm-9">
            {{ form_widget(form.metadescription, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 form-control-label"> Metakeywords </label>
        <div class="col-sm-9">
            {{ form_widget(form.metakeywords, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-4 offset-sm-3">
            <button type="submit" class="btn btn-success">Enregistrer</button>
        </div>
    </div>

{{ form_end(form) }}



